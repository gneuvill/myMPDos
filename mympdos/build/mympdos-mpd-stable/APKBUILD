# Maintainer: Juergen Mang <mail@jcgames.de>
# Based on: https://pkgs.alpinelinux.org/package/edge/community/x86_64/mpd
pkgname=mympdos-mpd-stable
pkgver=0.23.14
pkgrel=0
pkgdesc="Music daemon that plays MP3, FLAC and Ogg Vorbis files"
url="https://musicpd.org"
pkgusers="mpd"
pkggroups="mpd audio"
provides="mpd"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	alsa-lib-dev
	boost-dev
	curl-dev
	expat-dev
	faad2-dev
	ffmpeg-dev
	flac-dev
	fmt-dev
	glib-dev
	icu-dev
	lame-dev
	libcap
	libid3tag-dev
	libmad-dev
	libnfs-dev
	libogg-dev
	libsamplerate-dev
	liburing-dev
	libvorbis-dev
	meson
	mympdos-libmpdclient-dev
	opus-dev
	pcre2-dev
	soxr-dev
	sqlite-dev"
install="$pkgname.pre-install"
subpackages="$pkgname-dbg $pkgname-doc $pkgname-openrc"
source="mympdos-mpd-stable.tar.gz
	${pkgname}.initd
	${pkgname}.confd
	stacksize.patch
	"
options="!check"

build() {
	meson \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--buildtype=release \
		-Dqobuz=disabled \
		-Dsoundcloud=disabled \
		-Dneighbor=false \
		-Ddbus=disabled \
		-Dbzip2=disabled \
		-Diso9660=disabled \
		-Dzzip=disabled \
		-Db_ndebug=true \
		. output
	ninja -C output
}

package() {
	DESTDIR="$pkgdir" ninja -C output install

	# mpd attempts to configure real-time scheduling on linux
	# add the capability which allows doing that
	# see: https://www.musicpd.org/doc/html/user.html#real-time-scheduling
	setcap cap_sys_nice+ep "$pkgdir"/usr/bin/mpd

	install -m755 -D "$srcdir"/$pkgname.initd \
		"$pkgdir"/etc/init.d/mpd
	install -m644 -D "$srcdir"/$pkgname.confd \
		"$pkgdir"/etc/conf.d/mpd
	install -d -g audio -o mpd -m775 \
		"$pkgdir"/run/mpd \
		"$pkgdir"/var/lib/mpd \
		"$pkgdir"/var/lib/mpd/playlists
}

sha512sums=""
